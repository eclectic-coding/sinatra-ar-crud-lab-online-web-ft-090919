<form action="/articles/<%= @article.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <ul>
    <li>
      <label for="title">Title</label>
      <input type="text" id="title" name="article[title" value="<%= @article.title %>">
    </li>
    <li>
      <label for="content">Content</label>
      <textarea name="article[content]" id="content" value="<%= @article.content %>" cols="30" rows="10"></textarea>
    </li>
  </ul>
  <input type="submit" />
</form>